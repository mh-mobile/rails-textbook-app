.columns.is-centered
  .column.is-1
    = @report.user.profile_icon_tag
  .column.box.is-half
    p
      .label
        = Report.human_attribute_name(:title)
        | :
      = @report.title
    p
      .label
        = Report.human_attribute_name(:description)
        | :
      = @report.description
    p
      .label
        = Report.human_attribute_name(:learning_date)
        | :
      = @report.learning_date_string
    - if current_user == @report.user
      = link_to t('shared.links.edit'), edit_report_path(@report)
      |  | 
    = link_to t('shared.links.back'), reports_path

