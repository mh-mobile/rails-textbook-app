<h2><%= t(".title") %></h2>

<%= form_for(resource, as: resource_name, url: update_user_registration_path, html: { method: :patch }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= image_tag resource.profile_icon, class: "profile_icon" if resource.profile_icon.attached? %>
    <%= f.file_field :profile_icon %>
  </div>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :postcode %><br />
    <%= f.text_field :forward_postcode %>
    -
    <%= f.text_field :backward_postcode %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :self_introduction %><br />
    <%= f.text_area :self_introduction %>
  </div>

  <div class="actions">
    <%= f.submit t("shared.links.update") %>
  </div>
<% end %>

<%= link_to t("shared.links.back"), :back %>
